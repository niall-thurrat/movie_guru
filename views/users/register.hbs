<h1>
  <span class="far fa-plus-square"></span> Register
</h1>

<form method="post" action="/users/register">
  <div class="form-group">
    <input type="text" class="form-control" name="username" minlength="6" maxlength="30"
      placeholder="Enter your username (6-30 characters)" required="required" autofocus="autofocus" />
  </div>
  <div class="form-group">
    <input type="text" class="form-control" name="password" minlength="6"
      placeholder="Enter your password (minimum 6 characters)" required="required" autocomplete="off"/>
  </div>
  <div class="form-group">
    <input type="date" class="form-control" name="birth_date" required="required"/>
  </div>
  <button type="submit" class="btn btn-lg btn-primary">Submit</button>
</form>