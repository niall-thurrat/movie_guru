<form action="">
  <div class="p-1 bg-light rounded rounded-pill shadow-sm mb-4">
    <div class="input-group">
      <input type="search" placeholder="Search for movies with keywords" aria-describedby="button-addon1"
        class="form-control border-0 bg-light" name="search">
      <div class="input-group-append">
        <button id="button-addon1" type="submit" class="btn btn-link text-primary">
          <i class="fa fa-search"></i></button>
      </div>
    </div>
  </div>
</form><br>

{{#if locals.data }}
<h1><span class="far fa-list-alt"></span>
    Search Results</h1>

<h6>Keywords: 
  {{#each locals.keywords}}
    {{this}} 
  {{/each}}</h6>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Year</th>
            <th class="text-left">Average Rating</th>
        </tr>
    </thead>
    <tbody>
        {{#if locals.data.length }}
        {{#each locals.data}}
        <tr>
            <td class="w-10">{{this.title}}</td>
            <td class="w-20">{{this.year}}</td>
            <td class="w-70">{{this.avg_rating}}</td>
        </tr>
        {{/each}}
        {{else}}
        <tr>
            <td colspan="3" class="text-center text-danger">
                No movies to display.
            </td>
        </tr>
        {{/if}}
    </tbody>
</table><br>
{{/if}}